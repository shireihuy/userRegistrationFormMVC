@page
@model LoginModel

@{
    ViewData["Title"] = "アカウント　ログイン";
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.LoginId" class="form-control" autocomplete="username" aria-required="true" placeholder="name" />
                    <label asp-for="Input.LoginId" class="form-label">ログインID</label>
                    <span asp-validation-for="Input.LoginId" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">パスワード</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">ログイン</button>
                </div>
                <div>
                    @* <a id="forgot-password" asp-page="./ForgotPassword">パスワードをお忘れですか？</a>  *@
                   
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">新規ユーザーとして登録</a>
                    </p>
                    @* <p> *@
                    @*     <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a> *@
                    @* </p> *@
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
